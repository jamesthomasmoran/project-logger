{% extends '@content/page.twig' %}

{% block navigation %}
    {# Might not want navigation bar on a login page... #}
{% endblock navigation %}

{% block main %}
    <section class="row">
        <article class="ml-auto col-md-4 mr-auto">
            {% include '@util/message.twig' %}
            <form action="{{base}}/login" method="post" class="primary-color light-text-color jumbotron">
                <input type="hidden" name="goto" value="{{goto}}"/>
                <fieldset>
                    <legend class="light-text-color text-center">Login</legend>
                    <div class="form-group">
                        <label for="un" class="control-label light-text-color">User Name</label>
                        <input type="text" id="un" name="login" placeholder="User Name" class="form-control" required="required"/>
                    </div>
                    <div class="form-group">
                        <label for="pw" class="control-label">Password</label>
                        <input type="password" id="pw" name="password" placeholder="**************" class="form-control" required="required"/>
                    </div>
        {#
                    <div class="form-check">
                                <label class="form-check-label">
                                    <input type="checkbox" name="memo"/> Remember me
                                </label>
                            </div>
        #}
                    <button class="float-right hover-color btn btn-primary" type="submit">Login</button>
                </fieldset>
                <p class="mb-0"><small><a class="light-text-color" href="{{base}}/forgot">Lost password?</a></small></p>
                {% if register %}
                    <p class="mb-0"><small><a class="light-text-color" href="{{base}}/register">Sign Up?</a></small></p>
                {% endif %}
            </form>
        </article>
    </section>
{% endblock main %}
