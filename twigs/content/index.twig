{% extends '@content/page.twig' %}

{% block onload %}
{% endblock onload %}

{% block header %}
    <section class="col-md-12 mt-5">
        <h1 class="text-center">My Projects</h1>
    </section>
{% endblock header %}

{% block main %}
    <section class="row">
        <article class="ml-auto ol-md-8 mr-auto">
            <a class="hover-color light-text-color btn btn-primary" href="{{ base }}/newproject"}>
                Add new Project</a>
            <div class="accordion" id="my-projects">
                {% for key,project in projects %}
                <div class="light-text-color card">
                    <div class="primary-color card-header" id="heading{{ key }}">
                        <h2 class="mb-0">
                            <a type="button" class="light-text-color btn btn-link" data-toggle="collapse" data-target="#collapse{{ key }}">
                                {{ project.name }}</a>
                        </h2>
                    </div>
                    <div id="collapse{{ key }}" class="dark-text-color collapse" aria-labelledby="heading{{ key }}" data-parent="#my-projects">
                        <div class="card-body">
                            <p>Last 5 actvities</p>
                            <a class="hover-color light-text-color btn btn-primary" href="{{ base }}/project/{{ project.id }}"}>
                                View all</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

        </article>
    </section>
{% endblock main %}

{% block footer %}
    <section class="col-md-12">
        <p class="text-center">Footer</p>
    </section>
{% endblock footer %}
